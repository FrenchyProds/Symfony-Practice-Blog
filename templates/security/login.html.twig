{% extends 'base.html.twig' %}

{% block body %}

    <h1>Login !</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Type your email here" required name="_username" type="text" name="" id="" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Type your password here" required name="_password" type="password" name="" id="" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>

{% endblock %}